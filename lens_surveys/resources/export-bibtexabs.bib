@ARTICLE{2020MNRAS.493L..33S,
       author = {{Smith}, Russell J. and {Collier}, William P. and {Ozaki}, Shinobu and {Lucey}, John R.},
        title = "{Subaru FOCAS IFU observations of two z \textbackslashboldsymbol\{{\ensuremath{\approx}}\} 0.12 strong-lensing elliptical galaxies from SDSS MaNGA$^{*}$}",
      journal = {\mnras},
     keywords = {gravitational lensing: strong, galaxies: elliptical and lenticular, cD, Astrophysics - Astrophysics of Galaxies},
         year = 2020,
        month = mar,
       volume = {493},
       number = {1},
        pages = {L33-L38},
     abstract = "{We present new observations of two z = 0.12 strong-lensing elliptical
        galaxies, originally discovered from the SDSS-IV MaNGA survey,
        using the new FOCAS IFU spectrograph on the Subaru Telescope.
        For J1436+4943, our observations confirm the identification of
        this system as a multiple-image lens, in a cusp configuration,
        with an Einstein radius {\ensuremath{\theta}}$_{Ein}$ = 2.0
        arcsec. For J1701+3722, the improved data confirm earlier hints
        of a complex source plane, with different configurations evident
        in different emission lines. The new observations reveal a
        previously unseen inner counter-image to the [O III] arc found
        from MaNGA, leading to a smaller revised Einstein radius of
        {\ensuremath{\theta}}$_{Ein}$ = 1.6 arcsec. The inferred
        projected masses within the Einstein apertures (3.7-4.7 kpc) are
        consistent with being dominated by stars with an initial mass
        function (IMF) similar to that of the Milky Way, and a dark
        matter contribution of {\ensuremath{\sim}}35 per cent as
        supported from cosmological simulations. These results are
        consistent with `pure lensing' analyses of lower redshift
        lenses, but contrast with claims for heavier IMFs from combined
        lensing and dynamical studies of more distant early-type
        galaxies.}",
          doi = {10.1093/mnrasl/slaa003},
archivePrefix = {arXiv},
       eprint = {1911.06338},
 primaryClass = {astro-ph.GA},
       adsurl = {https://ui.adsabs.harvard.edu/abs/2020MNRAS.493L..33S},
      adsnote = {Provided by the SAO/NASA Astrophysics Data System}
}

@ARTICLE{2020MNRAS.494..271C,
       author = {{Collier}, William P. and {Smith}, Russell J. and {Lucey}, John R.},
        title = "{MNELLS: the MUSE nearby early-type galaxy lens locator survey}",
      journal = {\mnras},
     keywords = {gravitational lensing: strong, galaxies: elliptical and lenticular, cD, galaxies: stellar content, Astrophysics - Astrophysics of Galaxies},
         year = 2020,
        month = mar,
       volume = {494},
       number = {1},
        pages = {271-292},
     abstract = "{Low-redshift strong-lensing galaxies can provide robust measurements of
        the stellar mass-to-light ratios in early-type galaxies (ETGs),
        and hence constrain variations in the stellar initial mass
